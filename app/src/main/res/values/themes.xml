<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TaskAlifTeach" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="BottomNavigation" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorControlHighlight">#000000</item>
        <item name="colorPrimary">#3966FB</item>
        <item name="colorControlNormal">#3966FB</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="Theme.TaskAlifTeach.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

    <style name="Theme.TaskAlifTeach.AppBarOverlay.Dark" parent="ThemeOverlay.AppCompat.Dark">
    </style>

    <style name="Theme.TaskAlifTeach.PopupOverlay.Dark" parent="ThemeOverlay.AppCompat.Dark">
    </style>

    <style name="MyHintStyle" parent="@android:style/TextAppearance">
        <item name="android:textColorHint">#7858BA</item>
        <item name="android:textSize">20dp</item>
        <item name="colorAccent">#7858BA</item>
        <item name="colorControlNormal">#7858BA</item>
        <item name="colorControlActivated">#7858BA</item>
    </style>
</resources>